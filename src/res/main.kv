BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    # Mode Selection and Location Dropdown
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            spacing: 10

            Label:
                text: 'Base Station Application'
                size_hint_y: 0.5
                font_size: '30sp'

            Button:
                id: switch_to_survey_mode
                size_hint_y: 0.5
                text: 'Switch to Survey Mode'
                on_release: app.switch_to_survey_mode()


        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            spacing: 10

            Button:
                id: select_location_button
                size_hint_y: 0.5
                text: 'Select Known Locations'
                on_release: app.show_location_selection()

            Button:
                id: switch_to_fixed_mode
                size_hint_y: 0.5
                text: 'Switch Fixed Mode'
                on_release: app.switch_to_fixed_mode()

    # Coordinates Display
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.6
        spacing: 20
        padding: 10

        # Current Coordinates Column
        BoxLayout:
            id: current_coordinates_column
            orientation: 'vertical'
            size_hint_x: 0.5

            Label:
                text: 'Current Position'
                font_size: '20sp'
                bold: True
                size_hint_y: 0.2

            Label:
                id: latitude_label
                text: "Latitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

            Label:
                id: longitude_label
                text: "Longitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

            Label:
                id: altitude_label
                text: "Altitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

        # Selected Location Column
        BoxLayout:
            id: fixed_coordinates_column
            orientation: 'vertical'
            size_hint_x: 0.5

            Label:
                id: selected_name_label
                text: 'Selected Location: N/A'
                font_size: '20sp'
                bold: True
                size_hint_y: 0.2

            Label:
                id: selected_latitude_label
                text: "Latitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

            Label:
                id: selected_longitude_label
                text: "Longitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

            Label:
                id: selected_altitude_label
                text: "Altitude: N/A"
                font_size: '18sp'
                size_hint_y: 0.2

    # Buttons
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        spacing: 10

        Button:
            id: save_new_button
            text: 'Save current location as new known location'
            disabled:
            on_press: app.on_save_new_location()

        Button:
            id: apply_button
            text: 'Apply'
            on_press: app.on_apply_location()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        size_hint_x: 0.1
        spacing: 10

        Button:
            text: 'Exit'
            on_press: app.on_exit_btn()
